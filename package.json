{
  "name": "@bernardwiesner/code-atlas",
  "version": "0.1.1",
  "description": "CLI tool to scan and index utility functions in codebases",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "code-atlas": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "code-analysis",
    "utility-functions",
    "ast",
    "typescript",
    "codebase",
    "developer-tools",
    "static-analysis"
  ],
  "author": "Bernard Wiesner",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wiesnerbernard/code-atlas.git"
  },
  "bugs": {
    "url": "https://github.com/wiesnerbernard/code-atlas/issues"
  },
  "homepage": "https://github.com/wiesnerbernard/code-atlas#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "inquirer": "^10.2.2",
    "ts-morph": "^24.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
